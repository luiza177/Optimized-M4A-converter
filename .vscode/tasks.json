{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Configure with CMake"
            ],
            "problemMatcher": []
        },
        {
            "label": "Configure with CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Release", // or Debug
                "-S.",
                "-Bbuild"
            ],
            "problemMatcher": [],
            "group": "build"
        }
    ]
}